{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "example",
    "docs"
  ],
  "version": "0.0.0",
  "license": "MIT",
  "description": "React framework based vite",
  "keywords": [
    "react",
    "framework",
    "vite"
  ],
  "author": "chenyueban <jasonchan0527@gmail.com>",
  "homepage": "https://github.com/chenyueban/neoi",
  "bugs": {
    "url": "https://github.com/chenyueban/neoi/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chenyueban/neoi"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "test": "lerna run test",
    "build": "lerna run build",
    "start": "lerna run start --parallel",
    "link:neoi": "cd packages/neoi && pnpm link && cd -",
    "prettier": "lerna run prettier",
    "update:deps": "pnpm update --interactive --latest"
  },
  "devDependencies": {
    "@chenyueban/lint": "^0.1.5",
    "@chenyueban/tsconfig": "^0.1.5",
    "@types/jest": "^26.0.20",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "4",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
